{
  "root": true,
  "extends": "standard",
  "env": {
    "commonjs": true,
    "es2021": true,
    "browser": false,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "max-len": ["error", { "code": 120, "tabWidth": 2 }],
    "no-async-promise-executor": "off",
    "camelcase": "off"
  }
}
